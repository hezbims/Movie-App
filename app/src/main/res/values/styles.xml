<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="header">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="medium_header" parent="header">
        <item name="android:textSize">@dimen/h1</item>
    </style>

    <style name="small_header" parent="header">
        <item name="android:textSize">@dimen/h2</item>
    </style>

    <style name="very_small_header" parent="header">
        <item name="android:textSize">@dimen/h3</item>
    </style>

    <style name="roundedCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

    <style name="actionBarStyle"
        parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@null</item>
    </style>

    <style name="smallLoadingViewStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="mediumLoadingViewStyle">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
    </style>

</resources>